{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",
    "compilerOptions": {
        "lib": [
            "dom",
            "es2015"
        ],
        "types": [],
        "module": "es2015",
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "outDir": "lib",
        "declaration": true
    },
    "include": [
        "src/**/*"
    ]
}
